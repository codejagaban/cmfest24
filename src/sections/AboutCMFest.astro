---
import { Image } from "astro:assets";
import tevent from "../images/sponsors/tevent.svg";
import commsor from "../images/sponsors/commsor.svg";
import daohq from "../images/sponsors/daohq.svg";
import gomycode from "../images/sponsors/gomycode.svg";
import rite from "../images/sponsors/rite.svg";
import x from "../images/sponsors/x.svg";
import chimoney from "../images/sponsors/chimoney.svg";
import chaoss from "../images/sponsors/chaoss.svg";
import bitoshi from "../images/sponsors/bitoshi.svg";
import beacamp from "../images/sponsors/beacamp.svg";
import nirvana from "../images/sponsors/nirvana.svg";
import talentpoel from "../images/sponsors/talentpoel.svg";
import orbit from "../images/sponsors/orbit.svg";
import Canva from "../images/canva.svg";
import Spotify from "../images/Spotify.svg";
import Universal from "../images/universal.svg";
---

<section id="about" class="container py-20 mx-auto max-w-7xl px-3 sm:px-6 md:px-10">
  <div class="fade-up flex gap-4 flex-col items-start">
    <h1 class="text-3xl text-bg-primary font-semibold">About CMFEST</h1>
    <div class="flex flex-col gap-6">
      <p class="text-bg-primary text-base">
        CMFEST is the biggest Community Managers Festival in Africa will bring
        together community managers and leaders for a day of learning,
        networking, collaborating & fun sessions to bridge the gap in building
        and managing credible communities in Africa.
      </p>
      <p class="text-bg-primary text-base">
        This year's festival will be an avenue for networking among leaders &
        managers, companies to launch & strengthen their community programs in
        Africa, panel discussions on hot topics in the community space & also
        proffer solutions to challenges faced by community leaders & managers in
        Africa.
      </p>
      <p class="text-bg-primary text-base">
        These are the sponsors we&apos;ve worked with in the past:
      </p>
    </div>
  </div>
  <div class="fade-up grid grid-cols-3 md:grid-cols-6 gap-10 w-full mt-10 px-2">
    <Image
      src={tevent}
      alt="tevent"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={commsor}
      alt="commsor"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={daohq}
      alt="daohq"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={gomycode}
      alt="gomycode"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={rite}
      alt="rite"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={x}
      alt="x"
      class="h-10 w-auto filter grayscale"
    />
  </div>
  <div class="fade-up grid grid-cols-3 md:grid-cols-6 gap-10 w-full mt-10 px-2">
    <Image
      src={chimoney}
      alt="chimoney"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={talentpoel}
      alt="talentpoel"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={nirvana}
      alt="nirvana"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={bitoshi}
      alt="bitoshi"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={beacamp}
      alt="beacamp"
      class="h-10 w-auto filter grayscale"
    />
    <Image
      src={orbit}
      alt="orbit"
      class="h-10 w-auto filter grayscale"
    />
  </div>
</section>

<style>
.fade-up {
  opacity: 0;
  transform: translateY(50px);
  transition: opacity 0.8s ease-out, transform 0.8s ease-out;
}

.fade-up.animate {
  opacity: 1;
  transform: translateY(0);
}
</style>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate');
        observer.unobserve(entry.target);
      }
    });
  });

  document.querySelectorAll('.fade-up').forEach(el => observer.observe(el));
</script>
